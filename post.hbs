{{!< default}}
{{navigation}}
<main class="content" role="main">
    {{#post}}
    {{#has tag="videos" }}
    {{!--None--}}
    {{else}}
    {{#if image}}
    <header class="post-header-image" style="background-image: url('{{image}}')">
    </header>
    {{/if}}
    {{/has}}
    <div class="container-sm">
        <article class="{{post_class}}">
            {{! Everything below outputs content of the the post which has been published }}
            <h1 class="post-title">{{title}}</h1>
            <div class="row post-top-meta">
                <div class="col-xs-6">
                    <div class="text-muted">
                        <time datatime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time>
                    </div>
                </div>
                <div class="col-xs-6 post-share">
                    <ul>
                        <li>
                            share
                        </li>
                        <li>
                            <a href="http://twitter.com/share?text={{title}}&url={{url absolute="true"}}" onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                                <i class="fa fa-twitter" aria-hidden="true"></i>
                            </a>
                        </li>
                        <li>
                            <a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}" onclick="window.open(this.href, 'facebook-share', 'width=580,height=296');return false;">
                                <i class="fa fa-facebook-official" aria-hidden="true"></i>
                            </a>
                        </li>
                        <li>
                            <a href="https://plus.google.com/share?url={{url absolute="true"}}" onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                                <i class="fa fa-google-plus" aria-hidden="true"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <section class="post-content">
                {{content}}
            </section>
            <footer class="post-footer">
                <div class="post-meta">
                    {{#if tags}}
                    <div class="post-tags">
                        <i class="fa fa-tags" aria-hidden="true"></i> {{#foreach tags}}<a href="{{url}}">#{{name}}</a>{{/foreach}}
                    </div>
                    {{/if}}
                </div>
                {{> author-description}}
                {{!-- Comments section --}}
                {{> disqus }}
            </footer>
        </article>
    </div>
</main>
{{/post}}
